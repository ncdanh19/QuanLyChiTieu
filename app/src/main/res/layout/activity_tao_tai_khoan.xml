<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCol"
    tools:context=".activity.TaoTaiKhoanActivity">
    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorItem"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Titlebar"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            >

            <ImageButton
                android:id="@+id/trolai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_effect_button"
                android:foreground="@drawable/ic_trolai" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tạo tài khoản"
                android:textColor="@color/colorItem"
                android:textSize="20dp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/display"
        android:layout_below="@id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorItem">
        <TextView
            android:id="@+id/tv_soTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số dư ban đầu"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/edt_SoTien"
            android:layout_width="match_parent"
            android:layout_height="210px"
            android:layout_below="@+id/tv_soTien"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:textSize="35dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_below="@id/display"
        android:background="@color/colorItem"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/line_mota"
            android:background="@color/colorItem"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/icon_vitien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_vi"
                tools:srcCompat="@drawable/ic_vi" />

            <EditText
                android:id="@+id/edt_tentk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_toRightOf="@id/icon_vitien"
                android:hint="Tên tài khoản"
                android:paddingLeft="10dp"
                android:background="@null"
                android:inputType="text" />
        </RelativeLayout>
        <View
            android:id="@+id/line1"
            android:layout_below="@+id/line_mota"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="65dp"/>
        <Button
            android:background="@drawable/ripple_effect"
            android:id="@+id/btn_loaitk"
            android:layout_below="@id/line1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="left|center"
            android:text="Loại tài khoản"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_chamhoi"
            android:drawablePadding="10dp"
            />
        <View
            android:id="@+id/line2"
            android:layout_below="@+id/btn_loaitk"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="65dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:id="@+id/line_chuthich"
            android:background="@color/colorItem"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/icon_mota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_mota"
                tools:srcCompat="@drawable/ic_mota" />

            <EditText
                android:id="@+id/edt_chuthich"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_toRightOf="@id/icon_mota"
                android:hint="Chú thích"
                android:paddingLeft="10dp"
                android:background="@null"
                android:inputType="text" />
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_Luu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_body"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Lưu"
        android:textColor="#ffffff"
        android:background="@drawable/button_corner_shape"
        android:foreground="@drawable/ripple_effect"/>
</RelativeLayout>