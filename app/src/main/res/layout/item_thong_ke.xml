<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="10dp"
    android:paddingStart="8dp"
    android:background="@color/colorItem">
    <RelativeLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_hangmuc"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/ten_hangmuc"
            android:layout_toEndOf="@id/img_hangmuc"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tên hạng mục"
            android:textColor="@color/colorItemText"/>
        <TextView
            android:id="@+id/percent"
            android:layout_toStartOf="@id/soTien"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0%)"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/soTien"
            android:layout_toStartOf="@id/currency"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="0"
            android:textColor="@color/colorItemText"/>
        <TextView
            android:id="@+id/currency"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorItemText"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="15dp">

        <ProgressBar
            android:id="@+id/progress_horizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="8dip" />
    </LinearLayout>
</RelativeLayout>