<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/image_hangmuc"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/ic_launcher_round"
            />

        <LinearLayout
            android:id="@+id/left_item"
            android:layout_toRightOf="@id/image_hangmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hangmuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên hạng mục"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_ngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="ngày thêm"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_soTien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số tiền"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="4dp"
                    android:text="đ"
                    android:textColor="@color/colorItemText"
                    android:textSize="16dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_vitien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ví tiền"
                android:textSize="14dp"
                android:gravity="right"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>